<div class="container">
  <div class="row">
    <div class="col-md-12">
      <br>
      <h4 class="mb-5 text-color col-3 "><b>ログイン</b></h4>

        <h5><b>会員の方はこちらからログイン</b></h5>
        
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field mb-1">
            <%= f.label :email,"メールアドレス", class: 'col-3' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        
          <div class="field mb-1">
            <%= f.label :password,"パスワード", class: 'col-3' %>
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
        
          <br>
          <div class="actions mb-1">
            <%= f.label :"　", class: 'col-3' %>
            <%= f.submit "ログイン", class: 'btn btn-primary col-2' %>
          </div>
          <% end %>
        
          <br>
        
        <h5><b>会員登録がお済みでない方</b></h5>
        <div class="ml-5">
        <p><%= link_to "こちら", new_customer_registration_path, class: 'text-decolation' %>から新規登録を行ってください</p>
      </div>
    </div>
  </div>
</div>
