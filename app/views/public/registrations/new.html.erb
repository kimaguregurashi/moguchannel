<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3 class="mb-5 text-color col-3 text-center">新規会員登録</h3>
      
      <%= form_for(resource, as: resource_name, url: customer_registration_path) do |f| %>
      
      
       <div class="sign_up-pages col-12">
         
          <div class="field mb-1">
            <%= f.label :"ハンドルネーム", class: 'col-3' %>
            <%= f.text_field :customer_name, autofocus: true, class: 'rounded', placeholder: "もぐお" %>
          </div>
          
          <div class="field mb-1">
            <%= f.label :"メールアドレス", class: 'col-3' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'rounded', placeholder: "sample@examle.com" %>
          </div>
          
          <div class="field mb-1">
            <%= f.label :"電話番号(ハイフンなし)", class: 'col-3' %>
            <%= f.text_field :telephone_number, autofocus: true, class: 'rounded', placeholder: "00000000000" %>
          </div>
          
          <div class="field mb-1">
            <%= f.label :"パスワード(6文字以上)", class: 'col-3' %>
            <% if @minimum_password_length %>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: 'rounded' %>
          </div>
      
          <div class="field mb-1">
            <%= f.label :"パスワード(確認用)", class: 'col-3' %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'rounded' %>
          </div>
      
          <div class="actions">
            <%= f.label :"　", class: 'col-3' %>
            <%= f.submit "新規登録", class: 'btn btn-primary col-2' %>
          </div>
          </div>
          <% end %>
      
      <h2 class="mt-5 mb-4 login-color col-4 text-center">既に登録済みの方</h2>
      <div class="ml-5">
        <p><%= link_to "こちら", new_customer_session_path, class: 'text-decolation' %>からログインしてください。</p>
      </div>
    </div>
  </div>
</div>
